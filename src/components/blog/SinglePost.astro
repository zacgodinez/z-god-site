---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import { getFormattedDate } from '~/utils/utils';
import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
---

<section class="mx-auto pt-8 sm:pt-12 lg:pt-12">
  <article>
    <header class={post.image ? '' : ''}>
      <div
        class="mx-auto mb-2 mt-0 flex max-w-3xl flex-col justify-between px-4 text-sm text-muted-foreground sm:flex-row sm:items-center sm:px-6"
      >
        <p class="flex items-center gap-1">
          <Icon name="tabler:clock" class="-mt-0.5 inline-block size-4" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.readingTime && (
              <>
                Â· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>

      <h1 class="mx-auto max-w-3xl px-4 font-heading text-3xl font-bold tracking-tighter sm:px-6 md:text-5xl">
        {post.title}
      </h1>
      <p
        class="mx-auto mb-8 mt-6 max-w-3xl px-4 text-justify text-lg font-medium text-muted-foreground sm:px-6 md:text-xl"
      >
        {post.excerpt}
      </p>

      {
        post.image ? (
          <Image
            src={post.image}
            class="mx-auto mb-6 max-w-full bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post?.excerpt || ''}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="mx-auto max-w-3xl px-4 sm:px-6">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>
    <div
      class="prose relative px-6 text-muted-foreground dark:prose-invert prose-headings:font-heading prose-headings:font-bold prose-headings:tracking-tighter prose-a:text-muted-foreground prose-strong:font-black prose-strong:text-muted-foreground prose-pre:text-sm prose-li:my-0 prose-li:marker:text-muted-foreground prose-img:rounded-md prose-img:shadow-lg sm:px-6"
    >
      <slot />
    </div>
    <div class="mx-auto mt-8 flex max-w-3xl flex-col justify-between px-6 pb-2">
      <SocialShare url={url} text={post.title} />
    </div>
  </article>
</section>
